{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@Components/*": ["Components/*"],
      "@Pages/*": ["Pages/*"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
